{
  "manifest_version": 3,
  "name": "XE Modal Extractor",
  "version": "1.0",
  "description": "Extracts a configured element and its images from a page and opens it in a new tab.",
  "permissions": ["scripting", "tabs", "activeTab", "downloads", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "action": {
    "default_title": "Extract content"
  }
}
